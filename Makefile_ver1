#.PHONY: all clean

all: priv/rf24

	@mkdir -p priv

src/interrupt.o: src/interrupt.c 
	$(CXX) -c $(ERL_CFLAGS)$(CFLAGS) src/interrupt.c -o

src/RF24.o: src/RF24.cpp
	$(CXX)  -c $(ERL_CFLAGS) $(CFLAGS) src/RF24.cpp -o

src/spi.o:  src/spi.cpp
	$(CXX)  -c $(ERL_CFLAGS) $(CFLAGS) src/spi.cpp -o

src/bcm2835.o: src/bcm2835.c
	$(CC) -c $(ERL_CFLAGS) $(CFLAGS) src/bcm2835.c -o

src/main:  src/main.cpp
	$(CXX) -c $(ERL_CFLAGS) $(CFLAGS)  $(LIBS) -o $@ $<

priv/rf24:src/main.o src/interrupt.o src/RF24.o src/spi.o src/bcm2835.o:
	$(CXX) $^ $(ERL_LDFLAGS) $(LDFLAGS)  -L$(LIB_DIR)  -o$@

	#@mkdir -p priv_rf24
